{
	"name": "argo_workflow",
	"version": "1.0.0",
	"description": "Workflow with Argo task",
	"informatics_gateway": {
		"ae_title": "MONAI",
		"export_destinations": [
			"ORTHANC"
		]
	},
	"tasks": [
		{
			"id": "mean-pixel-calc",
			"description": "mean-pixel-calc operator and reporter",
			"type": "argo",
            "args": {
                "namespace": "argo",
                "workflow_template_name": "argo-workflow-none",
                "server_url": "https://argo-server.argo:2746",
                "allow_insecure": "true"
            },
            "ref": "",
			"artifacts": {
				"input": [
					{
						"name": "input-dicom",
						"value": "{{ context.input.dicom }}",
                        "mandatory": true
					}
				],
				"output": [
					{
						"name": "report-dicom"
					}
				]
			}
		}
	]
}